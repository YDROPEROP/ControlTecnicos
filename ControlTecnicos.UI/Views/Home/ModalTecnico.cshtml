@model ControlTecnicos.Models.DTOs.TecnicosViewModel

<div class="modal" id="modalTecnico">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                @if (Model.EstaEditando)
                {
                    <h4 class="modal-title">Editar Técnico</h4>
                }
                else
                {
                    <h4 class="modal-title">Crear Técnico</h4>
                }
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <form asp-action="OnSubmit">
                    <div class="form-group">
                        <label asp-for="Tecnico.Nombre">Nombre:</label>
                        <input type="text" required class="form-control" asp-for="Tecnico.Nombre">
                    </div>

                    <div class="form-group">
                        <label asp-for="Tecnico.Codigo">Codigo:</label>
                        <input type="text" required class="form-control" asp-for="Tecnico.Codigo">
                    </div>

                    <div class="form-group">
                        <label asp-for="Tecnico.SueldoBase">Sueldo Base:</label>
                        <input type="number" required class="form-control" asp-for="Tecnico.SueldoBase">
                    </div>
                    <div class="form-group">
                        <label asp-for="Sucursales">Sucursal:</label>
                        <select asp-for="Tecnico.Sucursal" id="sucursales" class="form-select">
                            @foreach (var sucursal in @Model.Sucursales)
                            {
                                <option value="@sucursal">@sucursal.Nombre</option>
                            }
                        </select>
                    </div>

                    <div class="form-group row">
                        <div class="col-8">
                            <label asp-for="Elementos">Elemento:</label>
                            <select asp-for="Tecnico.ElementosTecnicos" multiple id="elementos" class="form-select">
                                @foreach (var elemento in @Model.Elementos)
                                {
                                    <option value="@elemento">@elemento.Nombre</option>
                                }
                            </select>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <a class="btn btn-secondary" asp-action="index">cancelar</a>
                </form>
            </div>

            <div class="modal-footer">
            </div>

        </div>
    </div>
</div>